<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diego.hearthstone" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/hearthstone_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityCollection"
            android:label="@string/title_activity_activity_mazos" >
        </activity>
        <activity
            android:name=".CartaPersonalizadaActivity"
            android:label="@string/title_activity_carta_personalizada" >
        </activity>
        <activity
            android:name=".DetallesCartaActivity"
            android:label="@string/title_activity_detalles_carta" >
        </activity>
        <activity
            android:name=".NuevoMazoActivity"
            android:label="@string/title_activity_nuevo_mazo" >
        </activity>
        <activity
            android:name=".HeroSelectionActivity"
            android:label="@string/title_activity_hero_selection" >
        </activity>
        <activity
            android:name=".EleccionCartasMazoActivity"
            android:label="@string/title_activity_eleccion_cartas_mazo" >
        </activity>
    </application>

</manifest>
